{
	"name": "Rust Container",
	"dockerComposeFile": "docker-compose.yml",
	"service": "rust",
	"workspaceFolder": "/home/node/works",
	"remoteUser": "node",
	// If you want to install some extensions (for VSCode), you have to write down the extension ids here.
	"customizations": {
		"vscode": {
			"extensions": [
				"esbenp.prettier-vscode",
				"mosapride.zenkaku",
				"rust-lang.rust-analyzer",
				"JScearcy.rust-doc-viewer",
				"swellaby.vscode-rust-test-adapter",
				"serayuzgur.crates",
				"tamasfe.even-better-toml",
				"vadimcn.vscode-lldb"
			]
		}
	}
}