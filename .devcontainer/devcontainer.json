{
	"name": "Terraform Container",
	"dockerComposeFile": "docker-compose.yml",
	"service": "terraform",
	"workspaceFolder": "/home/node/works",
	"remoteUser": "node",
	// If you want to install some extensions (for VSCode), you have to write down the extension ids here.
	"customizations": {
		"vscode": {
			"extensions": [
				"esbenp.prettier-vscode",
				"mosapride.zenkaku",
				"mhutchie.git-graph",
				"HashiCorp.terraform"
			]
		}
	}
}