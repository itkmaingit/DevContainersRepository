{
	"name": "CPP Container",
	"dockerComposeFile": "docker-compose.yml",
	"service": "cpp",
	"workspaceFolder": "/home/node/works",
	"remoteUser": "node",
	// If you want to install some extensions (for VSCode), you have to write down the extension ids here.
	"customizations": {
		"vscode": {
			"extensions": [
				"franneck94.c-cpp-runner",
				"ms-vscode.cpptools",
				"esbenp.prettier-vscode",
				"mosapride.zenkaku",
				"mhutchie.git-graph"
			]
		}
	}
}